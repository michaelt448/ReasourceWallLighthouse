  <body>
  <% include partials/_header %> 



  <div class="container h-100">
      <div class="d-flex justify-content-center h-100">
        <div class="searchbar">
          <input class="search_input" type="text" name="" placeholder="Search...">
          <a href="#" class="search_icon"><i class="fas fa-search"></i></a>
        </div>
      </div>
    </div>
 <label class="no-entry">Please enter search item</label>
  <main class="container">

      <section class="new-url">
        <form method="POST" action="/">
          <div class="row mb-1">
            <div class="col-sm">
              <h2>Add new resource:</h2>
            </div>
          </div>
          <div class="row">
            <div class="col-sm">
              <input type=text placeholder="Add URL..." required="required" class="url-area form-control" name="url" />
            </div>
            <div class="col-sm">
              <input placeholder="Title..." required="required" class="title-area form-control" name="title" />            
            </div>
          </div>
          <div class="row mt-2">
            <div class="col-sm">
              <input placeholder="Description..." required="required" class="descr-area form-control" name="description" />
            </div>
            <div class="col-sm">
              <input placeholder="Category..." required="required" class="cat-area form-control" name="category" />
            </div>
            <div class="col-sm">
              <input placeholder="Image URL..." class="img-area form-control" name="url" />            
            </div>
          </div>
          <input type="submit" value="Add" class="add-resource btn btn-info mt-2 float-right"/>
        </form>
      </section>

  

      <section class="existing-resource grid">
     
      </section>
    </main>


<script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
